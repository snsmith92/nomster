 <div class="booyah-box col-10 offset-1">

  <div class ="row">
    <div class = "col-4">
      <%= image_tag 'user.png', class: "profile-photo" %>
    </div>

    <div class= "col-8"
      <h1><%= @user.email %></h1>
      <br />
      <h3> Member Since: <%= @user.created_at.strftime("%B %d, %Y") %> </h3>
      <br />
      <h4><%= @user.comments.count %> total comments </h4>
      <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews </h4>
    </div>
  </div class="clear"></div>
</div>

<br />

<div class="booyah-box col-10 offset-1">
  <h3 class="text-center"> Your Comments </h3>
  <div class = "row">
    <% @user.comments.each do |comment| %>
      <div class="col-12 col-sm-6">
        <blockquote>
          <% if comment.humanized_rating.present? %>
            <b><%= comment.humanized_rating %></b> -
          <% end %>
          <strong> <%= link_to comment.place.name, place_path(comment.place) %> </strong>
          <br />
          <%= comment.message %>
        </blockquote>
      </div>
    <% end %>
  </div>
</div>
