<div class="booyah-box col-8 offset-2">
  <br />
  <h2><center> Enter your place details </center></h2>
  <br />
  <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
