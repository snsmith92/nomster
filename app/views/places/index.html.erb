<!-- Bootstrap carousel start -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag 'slider1.jpg', class: "d-block img-fluid" %>
      <div class = "carousel-caption d-none d-md-block">
        Beaches of your dreams!
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'slider2.jpg', class: "d-block img-fluid" %>
      <div class = "carousel-caption d-none d-md-block">
        The best pizza places and restaurants!
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'slider3.jpg', class: "d-block img-fluid" %>
      <div class = "carousel-caption d-none d-md-block">
        Exciting modern art museums!
      </div>
    </div>
  </div>


  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- Bootstrap carousel end -->
<br />

<% @places.each do |place| %> 
  <div class="booyah-box col-10 offset-1">
    
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i><%= place.address %></i><br /> <br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
      <small><i><%= place.user.email %></i></small>
    <% end %>
    <br />
    <br />

    <% if place.photos.present? %> 
      <%= image_tag place.photos.last.picture, class: "img-fluid" %>    
      <br />               
    <% end %>


    <%if place.comments.present? %>
      <div class="col-12">
          <blockquote>
            <% if place.comments.last.humanized_rating.present? %>
              <b><%= place.comments.last.humanized_rating %></b>
            <% end %>
            <br />
            <%= place.comments.last.message %>
            <br />
            <small><i> <%= place.comments.last.user.email %></i></small>
            <br />
          </blockquote>
        </div>
      <% end %>
    </div>

  <% end %>

</div> 

<br />

<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>
